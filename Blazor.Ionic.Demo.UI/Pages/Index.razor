@page "/"
<IonContent class="ion-padding">
    <h1>Hello, world!</h1>
    <p>This is the default Blazor application Web Assembly template that has been adjusted to use <a href="https://github.com/Kukks/Blazor.Ionic"> Blazor.Ionic</a></p>

</IonContent>
@inject UIStateService UIStateService

@code{

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            UIStateService.Title = "Home";
        }
        base.OnAfterRender(firstRender);
    }

}