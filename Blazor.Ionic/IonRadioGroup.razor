@using Microsoft.JSInterop
@using System.Text.Json.Serialization
@inject IJSRuntime JsRuntime


<ion-radio-group value="@Value" @attributes="InputAttributes" @ref="_element">@ChildContent</ion-radio-group>

@code {
    private string _value;


    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Value
    {
        get => _value;
        set
        {
            if (_value == value) return;
            _value = value;
            ValueChanged.InvokeAsync(value);
        }
    }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> InputAttributes { get; set; }

    ElementReference _element { get; set; }
    DotNetObjectReference<IonRadioGroup> ThisRef { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            ThisRef = DotNetObjectReference.Create(this);
            await JsRuntime.InvokeVoidAsync("IonicBridge.registerBlazorCustomHandler", _element, "ionChange", ThisRef, nameof(HandleChange));
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    [JSInvokable(nameof(HandleChange))]
    public async Task HandleChange(RadioGroupChangeEventDetail data)
    {
        Value = data.Value;
    }

    [Parameter]
    public EventCallback<object> ValueChanged { get; set; }

    [Parameter]
    public EventCallback<KeyboardEventArgs> OnInput { get; set; }

    public class RadioGroupChangeEventDetail
    {
        [JsonPropertyName("value")]
        public string Value { get; set; }
    }

}