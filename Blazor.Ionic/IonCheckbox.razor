@using System.Text.Json.Serialization
@inherits BaseIonicInputComponent<bool, IonCheckbox.InputChangeEventDetail>

<ion-checkbox checked="@Value" @attributes="InputAttributes" @ref="Element">@ChildContent</ion-checkbox>

@code {

    [Parameter]
    public bool Checked
    {
        get => Value;
        set => Value = value;
    }

    public class InputChangeEventDetail : BaseIonicChangeEventDetail<bool>
    {
        [JsonPropertyName("checked")]
        public bool Value { get; set; }

        public override bool GetValue()
        {
            return Value;
        }
    }
}